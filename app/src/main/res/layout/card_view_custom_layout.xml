<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_vertical_padding"
        android:paddingBottom="@dimen/card_vertical_padding"
        android:paddingLeft="@dimen/card_horizontal_padding"
        android:paddingStart="@dimen/card_horizontal_padding"
        android:paddingRight="@dimen/card_horizontal_padding"
        android:paddingEnd="@dimen/card_horizontal_padding">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/card_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/image_horizontal_margin"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_theaters_white_24dp"
            android:contentDescription="@string/card_image_content_description"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/card_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:maxLines="3"
            android:ellipsize="end" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_body"
            android:layout_below="@id/card_title"
            android:layout_toRightOf="@id/card_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_rel_date"
            android:layout_below="@id/card_body"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/card_vertical_margin"
            android:paddingBottom="@dimen/card_vertical_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
